<h4>Add an Item Manually</h4>
<form {{action 'create' on='submit'}}>
    <div class='form-group'>
        <label>UUID</label>
        {{input type='text' value=uuid name='uuid' required=true class='form-control'}}
    </div>
    <div class='form-group'>
        <label>Name</label>
        {{input type="text" value=name name='name' required=true class='form-control'}}
    </div>
    <div class='form-group'>
        <label>Rarity</label>
        {{input type="text" value=rarity name='rarity' required=true class='form-control'}}
    </div>
    {{#bs-button buttonType='submit'}}Add Item{{/bs-button}}
</form>
